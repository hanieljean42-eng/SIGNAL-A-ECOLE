# ============================================
# CONFIGURATION SPEAKFREE
# ============================================

# ===== SERVEUR =====
PORT=3000
NODE_ENV=development

# ===== BASE DE DONNÉES =====
DATABASE_PATH=./database/speakfree.db

# ===== JWT (SÉCURITÉ) =====
# ⚠️ CHANGEZ CES VALEURS EN PRODUCTION !
JWT_SECRET=CHANGEZ_MOI_PAR_UN_SECRET_TRES_LONG_ET_SECURISE
JWT_EXPIRES_IN=24h

# ===== BCRYPT (MOTS DE PASSE) =====
BCRYPT_ROUNDS=12

# ===== RATE LIMITING (PROTECTION DDOS) =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== ADMIN PAR DÉFAUT =====
# ⚠️ CHANGEZ CES VALEURS EN PRODUCTION !
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin2025
DEFAULT_ADMIN_EMAIL=admin@speakfree.local

# ===== EMAIL (OPTIONNEL) =====
# Décommentez et configurez pour activer les notifications email
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=votre-email@gmail.com
# EMAIL_PASS=votre-mot-de-passe-application
# EMAIL_FROM=SpeakFree <noreply@speakfree.com>

# ===== SMS / WHATSAPP (OPTIONNEL - TWILIO) =====
# Décommentez et configurez pour activer les notifications SMS/WhatsApp
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ===== CORS (CONFIGURATION PRODUCTION) =====
# CORS_ORIGIN=https://votre-domaine.com

# ===== LOGS =====
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# ============================================
# NOTES IMPORTANTES
# ============================================
# 
# 1. Copiez ce fichier en .env
# 2. Modifiez les valeurs selon votre environnement
# 3. Ne commitez JAMAIS le fichier .env sur Git
# 4. En production, utilisez des valeurs sécurisées
